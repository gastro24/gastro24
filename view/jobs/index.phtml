        });

        $('#jobs-list-filter').on('reset.gastro24', function(ev) { $(ev.target).find('input.facet-param').remove(); });

        // used for first facet collapse
        if ($(window).width() < 992) {
            $('.facets-heading-region_MultiString').click();
        }
    });
})(jQuery);
