                    </button>
                <?php else : ?>
                    <button type="button" class="pull-right btn btn-default"
                            data-text-saved="<?=$this->translate('Marked')?>" data-text-save="<?=$this->translate('Mark')?>" data-job="<?= $similarJob->getId() ?>">
