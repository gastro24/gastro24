                <img class="job-logo" alt="<?= $orgName ?>" src="<?= $wrapperLogoUrl ?>" />
            </a>
            <div class="card__job-content box__action-buttons">
                <!-- favorite button -->
                <?php if (isset($savedJobsContainer->jobs[$similarJob->getId()])) : ?>
